<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/guid_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_one" />
    <TextView
        android:id="@+id/guid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="36dp"
        android:text="Быстрая\nдоставка!"
        app:layout_constraintTop_toBottomOf="@id/guid_im"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/guid_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Гарантируем доставку не более чем\n за 60 минут с момента приема заказа.\n Если курьеры не успеют, вы получите\n сертификат на большую бесплатную\n пиццу с доставкой. "
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/guid_title" />
</androidx.constraintlayout.widget.ConstraintLayout>